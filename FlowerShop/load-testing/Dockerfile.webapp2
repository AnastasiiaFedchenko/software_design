FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

COPY FlowerShop.sln ./
COPY Directory.Build.props ./
COPY WebApp2/WebApp2.csproj WebApp2/
COPY Domain/Domain.csproj Domain/
COPY Forecast/ForecastAnalysis.csproj Forecast/
COPY InventoryRepo/InventoryOfProducts.csproj InventoryRepo/
COPY ProductBatchLoading/ProductBatchLoading.csproj ProductBatchLoading/
COPY ProductBatchReading/ProductBatchReading.csproj ProductBatchReading/
COPY ReceiptOfSale/ReceiptOfSale.csproj ReceiptOfSale/
COPY Segment/SegmentAnalysis.csproj Segment/
COPY UserValidation/UserValidation.csproj UserValidation/
COPY DataBaseConnection/ConnectionToDB.csproj DataBaseConnection/

RUN dotnet restore WebApp2/WebApp2.csproj

COPY . ./
RUN dotnet publish WebApp2/WebApp2.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:7.0
WORKDIR /app
COPY --from=build /app/publish ./

ENV ASPNETCORE_URLS=http://0.0.0.0:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "WebApp2.dll"]
