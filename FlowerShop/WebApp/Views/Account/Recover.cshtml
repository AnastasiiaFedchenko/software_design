@{
    ViewData["Title"] = "Восстановление доступа";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h2 class="text-center mb-4">Восстановление доступа</h2>

        <form asp-action="Recover" method="post">
            <div class="form-group">
                <label for="id">ID пользователя:</label>
                <input type="number" class="form-control" id="id" name="id" required>
            </div>
            <div class="form-group">
                <label for="recoveryCode">Код восстановления:</label>
                <input type="text" class="form-control" id="recoveryCode" name="recoveryCode" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Восстановить</button>
        </form>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Message</div>
        }
    </div>
</div>
